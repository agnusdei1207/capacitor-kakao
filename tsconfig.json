{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "lib": ["dom", "ES2021"],
    "module": "esnext", // ES 모듈로 설정 (변경 필요 없음)
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/esm", // 출력 디렉토리
    "pretty": true,
    "sourceMap": true, // 소스 맵 생성
    "strict": true,
    "target": "ES2021"
  },
  "files": ["src/index.ts"] // 컴파일할 파일 지정
}
